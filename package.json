{
  "name": "nest-starter",
  "version": "0.0.1",
  "description": "",
  "author": "Effective Soft Team",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://bitbucket.effective-soft.com/projects/ES617/repos/nest-starter"
  },
  "engines": {
    "node": ">=12.13.0",
    "yarn": ">=1.19.0"
  },
  "scripts": {
    "pm2": "pm2",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "yarn build && yarn pm2:start:prod",
    "pm2:start:prod": "pm2 startOrRestart ./pm2/production.json",
    "lint": "eslint '{src,test}/**/*.ts'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "knex": "knex --knexfile knexfile.ts",
    "migrate": "npm run knex migrate:latest",
    "migrate:make": "npm run knex migrate:make -- -x ts"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.0",
    "@nestjs/common": "^6.11.6",
    "@nestjs/core": "^6.11.6",
    "@nestjs/jwt": "^6.1.1",
    "@nestjs/passport": "^6.1.1",
    "@nestjs/platform-express": "^6.11.6",
    "@nestjs/swagger": "^4.5.10",
    "bcrypt": "^3.0.8",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.11.0",
    "date-fns": "^2.9.0",
    "dotenv": "^8.2.0",
    "helmet": "^3.21.2",
    "knex": "^0.20.9",
    "mysql": "^2.18.1",
    "objection": "^2.1.2",
    "objection-timestamps": "^4.0.0",
    "objection-visibility": "^1.0.0",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.5.4",
    "swagger-ui-express": "^4.1.4"
  },
  "devDependencies": {
    "@nestjs/cli": "^6.14.2",
    "@nestjs/schematics": "^6.9.3",
    "@nestjs/testing": "^6.11.6",
    "@types/express": "^4.17.2",
    "@types/hapi__joi": "^16.0.9",
    "@types/helmet": "^0.0.45",
    "@types/jest": "^25.1.2",
    "@types/node": "^13.7.0",
    "@types/passport-jwt": "^3.0.3",
    "@types/passport-local": "^1.0.33",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.21.2",
    "husky": "^4.2.1",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.7",
    "pm2": "^4.2.3",
    "prettier": "^2.0.5",
    "supertest": "^4.0.2",
    "ts-jest": "^25.2.0",
    "ts-loader": "^6.1.1",
    "ts-node": "^8.6.2",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.0.0",
    "typescript": "^3.7.5"
  },
  "lint-staged": {
    "!(*test).ts": [
      "yarn run lint --max-warnings=0",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  }
}
