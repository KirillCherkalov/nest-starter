{
  "name": "nest-starter",
  "version": "0.0.1",
  "description": "",
  "author": "Effective Soft Team",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://bitbucket.effective-soft.com/projects/ES617/repos/nest-starter"
  },
  "engines": {
    "node": ">=12.13.0",
    "yarn": "~1.19.0"
  },
  "scripts": {
    "pm2": "pm2",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "yarn build && yarn pm2:start:prod",
    "pm2:start:prod": "pm2 startOrRestart ./pm2/production.json",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "knex": "knex --knexfile knexfile.ts",
    "migrate": "npm run knex migrate:latest",
    "migrate:make": "npm run knex migrate:make -- -x ts"
  },
  "dependencies": {
    "@hapi/joi": "^16.1.8",
    "@nestjs/common": "^6.10.12",
    "@nestjs/core": "^6.10.12",
    "@nestjs/platform-express": "^6.10.12",
    "@nestjs/swagger": "^4.0.9",
    "@nestjs/typeorm": "^6.2.0",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.11.0",
    "dotenv": "^8.2.0",
    "helmet": "^3.21.2",
    "knex": "^0.20.4",
    "mysql": "^2.17.1",
    "objection": "^2.0.7",
    "objection-timestamps": "^3.0.2",
    "objection-visibility": "^0.4.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0",
    "rxjs": "^6.5.3",
    "swagger-ui-express": "^4.1.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^6.12.9",
    "@nestjs/schematics": "^6.7.6",
    "@nestjs/testing": "^6.10.12",
    "@types/express": "^4.17.2",
    "@types/hapi__joi": "^16.0.4",
    "@types/helmet": "^0.0.45",
    "@types/jest": "^24.0.24",
    "@types/node": "^12.12.21",
    "@types/supertest": "^2.0.8",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "lint-staged": "^9.5.0",
    "pm2": "^4.2.1",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "^24.2.0",
    "ts-loader": "^6.1.1",
    "ts-node": "^8.5.4",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^5.20.1",
    "typescript": "^3.7.3"
  },
  "lint-staged": {
    "!(*test).ts": [
      "yarn run lint",
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  }
}
